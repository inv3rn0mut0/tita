      <DefaultText>Press the first button.</DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>52</ID>
      <DefaultText>Another click sounds from the center of the cube. </DefaultText>
      <FemaleText />
    </Entry>
    <Entry>
      <ID>57</ID>
      <DefaultText>Press the first button.</DefaultText>
      <FemaleText />
